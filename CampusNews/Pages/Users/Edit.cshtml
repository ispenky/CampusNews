@page
@model CampusNews.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>@ViewData["Title"]</title>
</head>

<body class="bg-gray-100 font-sans">
    <div class="container mx-auto py-8 px-4">
        <h1 class="text-3xl font-bold text-gray-800 mb-4">Edit</h1>
        <h4 class="text-lg font-semibold text-gray-700 mb-6">User</h4>
        <hr class="border-gray-300 mb-6">
        <div class="bg-white p-6 rounded-lg shadow-md">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
                <input type="hidden" asp-for="User.Id" />
                <div class="mb-4">
                    <label asp-for="User.Email" class="block text-gray-700 text-sm font-bold mb-2">@Html.DisplayNameFor(model => model.User.Email)</label>
                    <input asp-for="User.Email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <span asp-validation-for="User.Email" class="text-red-500 text-xs italic"></span>
                </div>
                <div class="mb-4">
                     <label asp-for="User.Token" class="block text-gray-700 text-sm font-bold mb-2">
                    @*    @Html.DisplayNameFor(model => model.User.Token) *@
                     姓名
                     </label>
                    <input asp-for="User.Token" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <span asp-validation-for="User.Token" class="text-red-500 text-xs italic"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="User.TokenExpiration" class="block text-gray-700 text-sm font-bold mb-2">
                        @* @Html.DisplayNameFor(model => model.User.TokenExpiration) *@
                        出生日期
                    </label>
                    <input asp-for="User.TokenExpiration" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <span asp-validation-for="User.TokenExpiration" class="text-red-500 text-xs italic"></span>
                </div>
                <div class="mt-6">
                    <input type="submit" value="Save" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" />
                </div>
            </form>
        </div>
        <div class="mt-6">
            <a asp-page="./Index" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md">Back to List</a>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</html>    