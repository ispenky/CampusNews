@page
@model CampusNews.Pages.Newwss.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet">
    <title>@ViewData["Title"]</title>
</head>

<body class="bg-gray-100 font-sans">
    <div class="container mx-auto py-8 px-4">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">新闻内容</h1>
        <div class="bg-white p-8 rounded-lg shadow-md max-w-xl mx-auto">
            <hr class="border-gray-300 mb-6">
            <dl class="grid grid-cols-12 gap-4">
                <dt class="col-span-3 text-gray-600 font-medium">
                    标题
                </dt>
                <dd class="col-span-9 text-gray-800">
                    @Html.DisplayFor(model => model.Newws.Title)
                </dd>
                <dt class="col-span-3 text-gray-600 font-medium">
                    发布时间
                </dt>
                <dd class="col-span-9 text-gray-800">
                    @Html.DisplayFor(model => model.Newws.ReleaseDate)
                </dd>
                <dt class="col-span-3 text-gray-600 font-medium">
                    类型
                </dt>
                <dd class="col-span-9 text-gray-800">
                    @Html.DisplayFor(model => model.Newws.Genre)
                </dd>
                <dt class="col-span-3 text-gray-600 font-medium">
                    内容
                </dt>
                <dd class="col-span-9 text-gray-800">
                    @Html.DisplayFor(model => model.Newws.NewsDetails)
                </dd>
            </dl>
        </div>
        <div class="flex justify-center space-x-4 mt-6">
            <a asp-page="./Edit" asp-route-id="@Model.Newws.Id" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md transition-colors duration-300">
                <i class="fas fa-edit mr-2"></i> 编辑新闻
            </a>
            <a asp-page="./Index" class="bg-gray-600 hover:bg-gray-700 text-white py-2 px-4 rounded-md transition-colors duration-300">
                <i class="fas fa-arrow-left mr-2"></i> 返回
            </a>
        </div>
    </div>
</body>

</html>