@page
@model CampusNews.Pages.Newwss.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>@ViewData["Title"]</title>
</head>

<body class="bg-gray-100 font-sans">
    <div class="container mx-auto py-8 px-4">
        <h1 class="text-3xl font-bold text-gray-800 mb-4">删除新闻</h1>
        <h3 class="text-xl font-semibold text-gray-700 mb-6">是否确定删除?</h3>
        <div class="bg-white p-6 rounded-lg shadow-md">
            <hr class="border-gray-300 mb-6">
            <dl class="grid grid-cols-12 gap-4">
                <dt class="col-span-2 font-semibold text-gray-600">标题</dt>
                <dd class="col-span-10 text-gray-800">@Html.DisplayFor(model => model.Newws.Title)</dd>
                <dt class="col-span-2 font-semibold text-gray-600">发布时间</dt>
                <dd class="col-span-10 text-gray-800">@Html.DisplayFor(model => model.Newws.ReleaseDate)</dd>
                <dt class="col-span-2 font-semibold text-gray-600">类型</dt>
                <dd class="col-span-10 text-gray-800">@Html.DisplayFor(model => model.Newws.Genre)</dd>
            </dl>
            <form method="post" class="mt-6">
                <input type="hidden" asp-for="Newws.Id" />
                <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md mr-4">删除</button>
                <a href="./Index" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md">返回</a>
            </form>
        </div>
    </div>
</body>

</html>    