@page
@model CampusNews.Pages.LoginModel
@{
    ViewData["Title"] = "登录";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>@ViewData["Title"]</title>
</head>

<body class="bg-gray-100 font-sans">
    <div class="container mx-auto py-8 px-4">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">登录</h1>
        <form method="post" class="bg-white p-8 rounded-lg shadow-md max-w-md mx-auto">
            <div class="mb-4">
                <label for="Email" class="block text-gray-600 font-medium mb-2">邮箱</label>
                <input asp-for="Email" id="Email" class="form-input w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:border-blue-500 focus:ring focus:ring-blue-200" />
                <span asp-validation-for="Email" class="text-red-500 text-sm mt-2 block"></span>
            </div>
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md transition-colors duration-300 w-full">
                发送登录链接
            </button>
        </form>
        @if (Model.Message != null)
        {
            <div class="mt-6 p-4 bg-blue-100 text-blue-700 rounded-md">
                @Model.Message
            </div>
        }
        @if (Model.Token != null)
        {
            @if (Model.IsValidToken)
            {
                <div class="mt-6 p-4 bg-green-100 text-green-700 rounded-md">
                    登录成功！
                </div>
            }
            else
            {
                <div class="mt-6 p-4 bg-red-100 text-red-700 rounded-md">
                    无效的登录链接或链接已过期。
                </div>
            }
        }
    </div>
</body>

</html>